{
  "order": 1,
  "settings": {
    "index": {
      "mapping": {
        "total_fields": {
          "limit": 10000
        }
      },
      "number_of_shards": 1,
      "refresh_interval": "5s"
    }
  },
  "index_patterns": [
    "osquery-6.1.3-*"
  ],
  "mappings": {
    "doc": {
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {        
        "tags": {
          "type": "text"
        },
        "@timestamp": {
          "type": "date"
        },
		"ipv4": {
          "type": "ip"
        },
		"ipv6": {
          "type": "ip"
        },
        "@version": {
          "type": "keyword"
        },
		"message": {
          "type": "text"
        }
      }
    }
  }
}

