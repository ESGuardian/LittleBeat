{
  "order": 0,
  "template": "nmap*",
  "settings": {
    "index.refresh_interval": "5s",
    "number_of_shards" : 1,
    "number_of_replicas" : 0
  },
  "mappings": {
    "nmap": {
      "dynamic_templates": [
        {
          "strings_as_keyword": {
            "mapping": {
              "ignore_above": 1024,
              "type": "keyword"
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {        
        "tags": {
          "type": "string"
        },
        "@timestamp": {
          "type": "date"
        },
        "@version": {
          "type": "string"
        }
      }
    }
  }
}

